<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  android:versionCode="1"
  android:versionName="0.3-SNAPSHOT"
  package="com.novoda.merlin.demo">

  <application
    android:allowBackup="true"
    android:label="Merlin demo">

    <activity
      android:label="Merlin Demo"
      android:name=".presentation.DemoActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:label="WizMerlin Demo"
      android:name=".presentation.wizmerlin.WizMerlinDemoActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

  </application>

</manifest>
